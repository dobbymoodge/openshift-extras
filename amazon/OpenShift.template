{
  "AWSTemplateFormatVersion" : "2010-09-09",

  "Description" : "AWS CloudFormation for setting up an OpenShift environment",

  "Parameters" : {
    "HostedZone" : {
      "Type" : "String",
      "Default" : "cloudydemo.com",
      "Description" : "The DNS name of an existing Amazon Route 53 hosted zone"
    }
  },

  "Mappings" : {
    "RegionMap" : {
      "us-east-1"      : { "AMI" : "ami-12d26a7b" }
    }
  },

  "Resources" : {
    "BrokerInstance" : {
      "Type" : "AWS::EC2::Instance",
      "Properties" : {
        "ImageId" : { "Fn::FindInMap" : [ "RegionMap", { "Ref" : "AWS::Region" }, "AMI" ]},
        "InstanceType" : "m1.large",
        "KeyName" : "libra",
        "SecurityGroups" : ["public"],
        "Tags" : [{"Key" : "Name", "Value" : "openshift-broker"}]
      }
    },
    "BrokerEIP" : {
        "Type" : "AWS::EC2::EIP",
        "Properties" : {
            "InstanceId" : { "Ref" : "BrokerInstance" }
        }
    },
    "NodeDNSRecord" : {
      "Type" : "AWS::Route53::RecordSet",
      "Properties" : {
        "HostedZoneName" : { "Fn::Join" : [ "", [{"Ref" : "HostedZone"}, "." ]]},
        "Comment" : "Node DNS Name",
        "Name" : { "Fn::Join" : [ "", ["node", ".", {"Ref" : "HostedZone"}, "."]]},
        "Type" : "A",
        "TTL" : "30",
        "ResourceRecords" : [ { "Ref" : "BrokerEIP" } ]
      }
    },
    "BrokerDNSRecord" : {
      "Type" : "AWS::Route53::RecordSet",
      "Properties" : {
        "HostedZoneName" : { "Fn::Join" : [ "", [{"Ref" : "HostedZone"}, "." ]]},
        "Comment" : "Broker DNS Name",
        "Name" : { "Fn::Join" : [ "", ["broker", ".", {"Ref" : "HostedZone"}, "."]]},
        "Type" : "A",
        "TTL" : "30",
        "ResourceRecords" : [ { "Ref" : "BrokerEIP" } ]
      }
    },
    "ActiveMQDNSRecord" : {
      "Type" : "AWS::Route53::RecordSet",
      "Properties" : {
        "HostedZoneName" : { "Fn::Join" : [ "", [{"Ref" : "HostedZone"}, "." ]]},
        "Comment" : "ActiveMQ DNS Name",
        "Name" : { "Fn::Join" : [ "", ["activemq", ".", {"Ref" : "HostedZone"}, "."]]},
        "Type" : "A",
        "TTL" : "30",
        "ResourceRecords" : [ { "Ref" : "BrokerEIP" } ]
      }
    },
    "DatastoreDNSRecord" : {
      "Type" : "AWS::Route53::RecordSet",
      "Properties" : {
        "HostedZoneName" : { "Fn::Join" : [ "", [{"Ref" : "HostedZone"}, "." ]]},
        "Comment" : "Datastore DNS Name",
        "Name" : { "Fn::Join" : [ "", ["mongo", ".", {"Ref" : "HostedZone"}, "."]]},
        "Type" : "A",
        "TTL" : "30",
        "ResourceRecords" : [ { "Ref" : "BrokerEIP" } ]
      }
    },
   "NamedDNSRecord" : {
      "Type" : "AWS::Route53::RecordSet",
      "Properties" : {
        "HostedZoneName" : { "Fn::Join" : [ "", [{"Ref" : "HostedZone"}, "." ]]},
        "Comment" : "Named DNS Name",
        "Name" : { "Fn::Join" : [ "", ["ns", ".", {"Ref" : "HostedZone"}, "."]]},
        "Type" : "A",
        "TTL" : "30",
        "ResourceRecords" : [ { "Ref" : "BrokerEIP" } ]
      }
    },
    "AppsDelegationDNSRecord" : {
      "Type" : "AWS::Route53::RecordSet",
      "Properties" : {
        "HostedZoneName" : { "Fn::Join" : [ "", [{"Ref" : "HostedZone"}, "." ]]},
        "Comment" : "Apps Subdomain DNS Delegation",
        "Name" : { "Fn::Join" : [ "", ["apps", ".", {"Ref" : "HostedZone"}, "."]]},
        "Type" : "NS",
        "TTL" : "30",
        "ResourceRecords" : [ { "Fn::Join" : [ "", ["ns", ".", {"Ref" : "HostedZone"}, "."]]} ]
      }
    }
  }
}
